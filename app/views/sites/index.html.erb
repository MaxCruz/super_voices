<div class="header clearfix">
    <%= image_tag(@contest.image, width: 600) if @contest.image.present? %>
</div>

<h2 class="text-muted"><%= @contest.name %></h2>

<p>
<strong>Start:</strong>
<%= @contest.start_date %>
</p>

<p>
<strong>End:</strong>
<%= @contest.end_date %>
</p>

<p>
<strong>Reward:</strong>
<%= @contest.reward %>
</p>

<p>
<strong>Script:</strong>
<%= @contest.script %>
</p>

<p>
<strong>Recomendations:</strong>
<%= @contest.recomendations %>
</p>

<%= link_to 'New Voice', '/sites/'+@contest.url+'/new' %>
<br />
<p id="notice"><%= notice %></p>

<h3 class="text-muted">Voices</h3>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Last name</th>
            <th>Message</th>
            <th>Voice</th>
        </tr>
    </thead>

    <tbody>
        <% url = request.base_url %>
        <% @voices.each do |voice| %>
            <% destination_url = (voice.destination_url) ? url + voice.destination_url : "#" %>
            <tr>
                <td><%= voice.email %></td>
                <td><%= voice.name %></td>
                <td><%= voice.last_name %></td>
                <td><%= voice.message %></td>
                <td>
                    <audio controls>
                        <source src="<%= destination_url %>" type="audio/mpeg"> 
                            Your browser does not support the audio element.
                    </audio>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= page_entries_info @voices %>
<br />
<%= will_paginate @voices %>
<br />
