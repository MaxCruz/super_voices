<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @contest.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@contest.image, width: 600) if @contest.image.present? %>
</p>

<p>
  <% url_contest = request.base_url + "/sites/" + @contest.url %>  
  <strong>Url:</strong>
  <a href="<%= url_contest %>" target="_blank"><%= url_contest %></a>
</p>

<p>
  <strong>Start:</strong>
  <%= @contest.start_date %>
</p>

<p>
  <strong>End:</strong>
  <%= @contest.end_date %>
</p>

<p>
  <strong>Reward:</strong>
  <%= @contest.reward %>
</p>

<p>
  <strong>Script:</strong>
  <%= @contest.script %>
</p>

<p>
  <strong>Recomendations:</strong>
  <%= @contest.recomendations %>
</p>

<%= link_to 'Edit', edit_contest_path(@contest) %> 

<h1>Voices</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Created</th>
      <th>Status</th>
      <th>Message</th>
      <th>Source url</th>
      <th>Destination url</th>
    </tr>
  </thead>

  <tbody>
    <% @voices.each do |voice| %>
      <tr>
        <td><%= voice.email %></td>
        <td><%= voice.name %></td>
        <td><%= voice.last_name %></td>
        <td><%= voice.created_at %></td>
        <td><%= voice.done ? "Converted" : "In Progress" %></td>
        <td><%= voice.message %></td>
        <td><%= voice.source_url %></td>
        <td><%= voice.destination_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', contests_path %>
