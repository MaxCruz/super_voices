<p id="notice"><%= notice %></p>

<h1>Contests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Site</th>
      <th>Start</th>
      <th>End</th>
      <th>Reward</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contests.each do |contest| %>
      <% url_contest = request.base_url + "/sites/" + contest.url %>  
      <tr>
        <td><%= contest.name %></td>
        <td><a href="<%= url_contest %>" target="_blank"><%= contest.url %></a></td>
        <td><%= contest.start_date %></td>
        <td><%= contest.end_date %></td>
        <td><%= contest.reward %></td>
        <td><%= link_to 'Show', contest %></td>
        <td><%= link_to 'Edit', edit_contest_path(contest) %></td>
        <td><%= link_to 'Destroy', contest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

