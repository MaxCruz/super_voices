<%= form_for(contest) do |f| %>
  <% if contest.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% contest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= request.base_url %>/sites/<%= f.text_field :url, size: 5 %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_select :end_date %>
  </div>

  <div class="field">
    <%= f.label :reward %>
    <%= f.number_field :reward %>
  </div>

  <div class="field">
    <%= f.label :script %>
    <%= f.text_area :script %>
  </div>

  <div class="field">
    <%= f.label :recomendations %>
    <%= f.text_area :recomendations %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
